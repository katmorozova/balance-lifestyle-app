<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".GoalsActivity">


    <LinearLayout
        android:id="@+id/layoutUrgentImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layoutUrgentNotImportant">

        <include
            layout="@layout/urgent_important"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUrgentNotImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layoutUrgentImportant">

        <include layout="@layout/urgent_not_important" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutNotUrgentImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutUrgentImportant"
        app:layout_constraintEnd_toStartOf="@+id/layoutNotUrgentNotImportant" >

        <include
            layout="@layout/not_urgent_important"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutNotUrgentNotImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layoutNotUrgentImportant"
        app:layout_constraintTop_toBottomOf="@+id/layoutUrgentNotImportant">

        <include layout="@layout/not_urgent_not_important" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewGoalsOfMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:text="@string/goals_month"
        android:textColor="@color/blue_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutNotUrgentImportant" />


</androidx.constraintlayout.widget.ConstraintLayout>