<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige" >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/matrix_name"
        android:textAlignment="center"
        android:textColor="@color/blue_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintBottom_toTopOf="@+id/buttonGoalsOfMonth" >

        <LinearLayout
            android:id="@+id/linearLayoutDoNow"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:background="@drawable/notes_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDoNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/do_title"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textColor="@color/coral"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDoNow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutPlaning"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:background="@drawable/notes_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPlaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/planing_title"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textColor="@color/coral"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPlaning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutDelegate"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:background="@drawable/notes_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDelegate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delegate_title"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textColor="@color/coral"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDelegate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutDelete"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/notes_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete_title"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textColor="@color/coral"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/buttonGoalsOfMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_dark"
        android:gravity="center"
        android:text="@string/goals_month"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>

