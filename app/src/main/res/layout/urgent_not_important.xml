<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutUrgentNotImportant"
    android:layout_width="180dp"
    android:layout_height="280dp"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@drawable/notes_bg">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/urgentNotImportant_title"
        android:textAlignment="center"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/coral"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUrgentNotImportant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:contentDescription="@string/recycler"
        android:padding="12dp"/>

</LinearLayout>