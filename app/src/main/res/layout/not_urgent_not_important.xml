<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutNotUrgentNotImportant"
    android:layout_width="180dp"
    android:layout_height="280dp"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@drawable/notes_bg" >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notUrgentNotImportant_title"
        android:textAlignment="center"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/coral"/>


    <TextView
        android:id="@+id/textViewUrgentImportantNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notUrgentNotImportant_note"
        android:textSize="14sp"
        android:textStyle="normal"
        android:paddingTop="10dp"
        android:textColor="@color/blue_dark"/>
</LinearLayout>